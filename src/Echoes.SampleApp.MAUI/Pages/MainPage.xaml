<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:Echoes.SampleApp.MAUI.PageModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:sampleApp="clr-namespace:Echoes.SampleApp.MAUI"
             xmlns:echoes="clr-namespace:Echoes;assembly=Echoes.MAUI"
             xmlns:translations="clr-namespace:Echoes.SampleApp.Translations;assembly=Echoes.SampleApp.Translations"
             x:Class="Echoes.SampleApp.MAUI.Pages.MainPage"
             x:DataType="pageModels:MainPageModel"
             >
    <StackLayout>
        <Label Text="{echoes:Translate {x:Static translations:Strings.welcome}}" VerticalOptions="Center"/>
        <Button Text="English" Command="{Binding SetCulture}" CommandParameter="english" />
        <Button Text="German" Command="{Binding SetCulture}" CommandParameter="german" />
        <Button Text="Chinese" Command="{Binding SetCulture}" CommandParameter="chinese" />
    </StackLayout>
</ContentPage>
